- provide(:title, "Sign in")

.container
  .row
    .col-sm-2
    .col-sm-8
      %h2 Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          = f.label :username
          %em
            半角英数字
          %br/
          = f.text_field :name, autofocus: true, class: "field form-control", pattern: "^[0-9A-Za-z]+$"
        .field
          = f.label :nickname
          %br/
          = f.text_field :nickname, autofocus: true, class: "field form-control"
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, class: "field form-control"
        .field
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "off", class: "field form-control"
        .field
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "off", class: "field form-control"
        .actions
          = f.submit "Sign up", class: "btn btn-primary"
      = render "devise/shared/links"

    .col-sm-2
