- provide(:title, "New")

.container
  .row
    .col-sm-2
    .col-sm-8
      .form-group
        - flash.each do |message_type, message|
          %p.alert{class: "alert-#{message_type}"}
            = message
        %h1 リスト作成
        = form_for [@category, @list] do |f|
          = f.label :Category
          %br
          = f.collection_select(:category_id, @categories, :id, :title, {class: "field form-control"})
          %br
          = f.label :title
          = f.text_field :title, class: "field form-control", rows: "1", maxlength: "20", placeholder: "title"
          = f.label :Description
          = f.text_field :description, class: "field form-control", rows: "3", maxlength: "140", placeholder: "Let me explain"
          = f.submit "Create", class: "btn btn-primary"
          = f.submit "Continue to create", name: "next_button", class: "btn btn-primary"
    .col-sm-2
