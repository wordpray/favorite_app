- provide(:title, "Category")
- breadcrumb :show_category, @category

.container
  .row
    .col-sm-2
      = link_to new_category_path do
        Add
        .fa.fa-plus-square-o
      %ul.list-group
        = link_to root_path do
          %li.list-group-item
            =@category.title
    .col-sm-3
      = link_to new_list_path do
        Add
        .fa.fa-plus-square-o
      %ul.list-group
        - @lists.each do |list|
          = link_to list_path(list) do
            %li.list-group-item
              =list.title

    .col-sm-7
      -if @first_list.present?
        = link_to new_list_link_path(@first_list) do
          Add
          .fa.fa-plus-square-o
        %ul.list-group
          - @first_list.links.each do |list|
            .col-sm-6
              %li
                =link_to "#{list.title}", "#{list.url}", target: "_blank"
